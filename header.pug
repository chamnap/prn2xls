html
  head
    meta(charset='utf-8')
    meta(content='IE=edge,chrome=1', http-equiv='X-UA-Compatible')
    title
    style(type='text/css').
      @font-face {
      font-family: 'Hanuman';
      font-style: normal;
      font-weight: 400;
      src: url(data:font/opentype;charset=utf-8;base64,WOFF_BASE64) format("woff"),
      url(data:font/truetype;charset=utf-8;base64,TTF_BASE64) format("truetype");
      }
      * {
      margin: 0;
      padding: 0;
      line-height: 21px;
      font-size: 14px;
      }
      [lang="kh"] {
      font-size: 14px;
      font-family: 'Hanuman', serif;
      font-weight: 400;
      }
      [lang="en"] {
      font-size: 14px;
      font-family: sans-serif;
      }
      .container {
      width: 1005px;
      margin: 0 auto;
      page-break-before: always;
      }
      .vat-invoice {
      padding-left: 5px;
      font-size: 18px;
      font-weight: 700;
      }
      .vat-invoice-en {
      line-height: 30px;
      }
      #header {
      margin-bottom: 30px;
      }
      #address {
      border-bottom: 1px inset #000;
      margin-bottom: 15px;
      padding-bottom: 15px;
      }
      .table {
      width: 1005px;
      }
      table, th, td {
      vertical-align: top
      }
      td:nth-child(4n) {
      text-align: right;
      margin-right: 5px;
      }
      td:last-child {
      padding-left: 15px;
      width: 183px;
      }
      .table-goods td:last-child{
      text-align: right;
      }
      .table-goods {
      border-spacing: 0;
      border-collapse: collapse;
      }
      .table-goods tr:nth-child(2) td {
      border: 0;
      padding-bottom: 15px;
      border-bottom: 1px inset #000;
      }
      .table-goods tr:nth-child(3) td {
      padding-top: 15px;
      }
      .sub-total,
      .grand-total {
      border-top: 1px inset #000;
      border-bottom: 1px inset #000;
      }
      .sub-total td,
      .grand-total td {
      padding: 15px 0;
      text-align: right;
      }
      .total td {
      padding-top: 15px;
      }
      .vat td {
      padding-bottom: 15px;
      }
      .summary {
      text-align: right;
      }
      .summary td:nth-child(3) {
      width: 175px;
      }
      .footer {
      margin-top: 30px;
      margin-bottom: 45px;
      }
      .payment-options {
      float: left;
      }
      .payment-options ul {
      list-style: none;
      }
      .signature {
      float: right;
      }
      .account-info {
      margin-top: 15px;
      }
      .sign-place {
      margin-top: 90px;
      }
      .clear {
      clear: both;
      }
      .kh-pay {
      width: 225px;
      padding-left: 1px;
      }
      .en-pay {
      width: 225px;
      margin-top: 5px;
      padding-left: 1px;
      }
  body
